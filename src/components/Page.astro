---
import Barra from './Barra.astro';
import Footer from '../components/Footer.astro';
import ImagemDisplay from "../components/ImagemDisplay.astro";
import '../styles/index.css';
import '../styles/imagens.css';
const { pageTitle } = Astro.props;

const imagen = {
  caminho: "/banner/banner-responsive.png",
  alter: "araguaney 2",
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/Araguaney Logo.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  </head>
  <body>
    <Barra/>
    <a class="img-add text-center" style="padding: 1em" href="/">
      <ImagemDisplay caminho={imagen.caminho} alter={imagen.alter} />
    </a>
      <slot/>
    <Footer/>
  </body>
</html>
